<!DOCTYPE html>
<html>
	<head>
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#da2d2c">
        <meta name="msapplication-TileColor" content="#da2d2c">
        <meta name="theme-color" content="#ffffff">
	</head>
	<body>
        <h3>Signed-in user email:</h3>
        <p>@ViewData["user"]</p>

        <!-- /saml/logout is handled by tazzy. After signing out, the user will be redirected to /tas/logout -->
        <p><a href="/t/@ViewData["tenant"]/saml/logout">Sign out</a></p>

        <h3>Simple API response:</h3>
        <p>@ViewData["simple"]</p>

        <h3>On-behalf-of API response:</h3>
        <p>@ViewData["onBehalf"]</p>

        <h3>Non-SOT API responses:</h3>
        <ul>
        @foreach (var response in (Tuple<Tas.Core.Routes.ConsumingAppInstall, string>[])ViewData["nonSot"]) 
        {
            <li>@response.Item1.App: @response.Item2</li>
        }
        </ul>
	</body>
</html>